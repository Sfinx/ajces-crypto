{
  "name": "ajces-crypto",
  "version": "1.0.0",
  "description": "wrapper functions for cryptographic primitives of tweetnacl",
  "main": "lib/crypto.js",
  "scripts": {
    "postinstall": "npm run clean && npm run build:prod",
    "clean": "rm -rf lib/ && mkdir -p lib/",
    "build": "npm run clean && better-npm-run dev",
    "build:prod": "npm run clean && better-npm-run prod",
    "build:test": "better-npm-run build-test",
    "build:test-node": "better-npm-run build-test-node",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "test": "webpack --config webpack.test.node.config.js && mocha ./test/test.node.bundle.js",
    "test:dev": "better-npm-run start-test",
    "test:nsp": "nsp check"
  },
  "betterScripts": {
    "dev": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build-test": {
      "command": "webpack --config webpack.test.config.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build-test-node": {
      "command": "webpack --config webpack.test.node.config.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start-test": {
      "command": "webpack-dev-server --config webpack.test.config.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "prod": {
      "command": "webpack -p",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "Andy Johnson <andyrjohnson82@gmail.com>",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "babel-plugin-add-module-exports"
    ]
  },
  "dependencies": {
    "pbkdf2": "^3.0.4",
    "tweetnacl": "^0.14.3",
    "tweetnacl-util": "^0.13.3"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.8",
    "chai": "^3.5.0",
    "eslint": "^2.9.0",
    "mocha": "^2.4.5",
    "mocha-loader": "^0.7.1",
    "nsp": "^2.2.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
